{
  "name": "@lightningtv/core",
  "version": "3.0.0-16",
  "description": "Lightning TV Core for Universal Renderers",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "@lightningtv/source": "./src/index.ts",
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.js"
      }
    },
    "./focusManager": {
      "import": {
        "@lightningtv/source": "./src/focusManager.ts",
        "types": "./dist/src/focusManager.d.ts",
        "default": "./dist/src/focusManager.js"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "start": "npm run watch",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,cjs,md}\"",
    "lint:fix:prettier": "prettier --write \"**/*.{ts,js,cjs,md}\"",
    "lint:eslint": "eslint",
    "lint:fix:eslint": "eslint --fix",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "test": "vitest",
    "test:perf": "vitest run flex.performance.spec.ts",
    "prepare": "husky",
    "prepack": "npm run build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "lightning",
    "javascript",
    "canvas",
    "web",
    "tv"
  ],
  "author": "Chris Lorenzo",
  "license": "Apache-2.0",
  "peerDependencies": {
    "@lightningjs/renderer": "^3.0.0-beta14"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/ui": "^3.1.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "release-it": "^18.1.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,cjs,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightning-tv/core.git"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "NOTICE",
    "README.md"
  ],
  "packageManager": "pnpm@10.8.0"
}
